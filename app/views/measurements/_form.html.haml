= form_for @measurement do |f|
  - if @measurement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@measurement.errors.count, "error")} prohibited this measurement from being saved:"
      %ul
        - @measurement.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :step_ingredient
    = f.text_field :step_ingredient
  .field
    = f.label :unit
    = f.text_field :unit
  .field
    = f.label :scalar
    = f.text_field :scalar
  .field
    = f.label :purpose
    = f.text_area :purpose
  .actions
    = f.submit 'Save'
