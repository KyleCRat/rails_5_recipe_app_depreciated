%h1 Listing measurements

%table
  %thead
    %tr
      %th Step ingredient
      %th Unit
      %th Scalar
      %th Purpose
      %th
      %th
      %th

  %tbody
    - @measurements.each do |measurement|
      %tr
        %td= measurement.step_ingredient
        %td= measurement.unit
        %td= measurement.scalar
        %td= measurement.purpose
        %td= link_to 'Show', measurement
        %td= link_to 'Edit', edit_measurement_path(measurement)
        %td= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' }

%br

