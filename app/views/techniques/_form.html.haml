= form_for @technique do |f|
  - if @technique.errors.any?
    #error_explanation
      %h2= "#{pluralize(@technique.errors.count, "error")} prohibited this technique from being saved:"
      %ul
        - @technique.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.button :submit, 'Save'
